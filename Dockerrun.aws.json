{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "bretstateham/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "bretstateham/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "brestateham/multi-workder",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "bretstateham/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "host": 80,
          "container": 80
        }
      ],
      "links": [
        "client","server"
      ]
    }
  ]
}